#!/usr/bin/env zsh
SKETCHYBAR_CONFIG="$HOME/.config/sketchybar"

# Start the bottom_bar process in the background first
bottom_bar &

# Small delay to ensure bottom_bar is ready
sleep 0.1

# Load configurations for both bars
source "$SKETCHYBAR_CONFIG/sketchybarrc-top"
source "$SKETCHYBAR_CONFIG/sketchybarrc-bottom"